extends layout

block content
  h1= title

  p Welcome to #{title}

  div.card-deck
    for article, index in articles
        div.card(style='width: 20rem;')
            img.card-img-right(src='#{article.imgUrl}', alt='Card image cap')
            div.card-body
                h4.card-title #{article.title}
                p.card-text(style='white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 75ch;') #{article.desc}
                a(href='#') Ler mais
                div
                    .progress(style='margin-top: 10px')
                        .progress-bar.bg-danger(role='progressbar',
                            style='width: #{article.score}%', aria-valuenow='#{article.score}', 
                            aria-valuemin='0', aria-valuemax='100') #{article.score}%
                    .btn-group(role='group', aria-label='Basic example', style="margin-top: 15px; float: right")
                        button.rate-positive.btn.btn-outline-primary.btn-sm(type='button' name='opinion#{index}', data-url="#{article.originUrl}") This article is actually legit
                        button.rate-negative.btn.btn-outline-danger.btn-sm(type='button' name='opinion#{index}', data-url="#{article.originUrl}") Agreed. It's fake

  script(src='/javascripts/news.js')
